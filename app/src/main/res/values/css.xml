<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="expHeader">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#ffdead</item>
        <item name="android:background">#d2691e</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="expItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="rcvTxtItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#111111</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="titulo">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="txtItem">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="lblItem">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="botao">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#ff8000</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="botaoClaro">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#ffdead</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>